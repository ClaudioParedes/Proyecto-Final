<div class="row container px-sm-5 py-5 justify-content-center mx-auto">
   <div class="my-1"><h1>Iniciar Sesi√≥n</h1></div>
       <hr />
<form class="border shadow col-12 col-md-10 col-lg-9">
    <div class="container">
      
        <div class="container">
          <div class="row align-items-center my-5">
              <div class="col-12 col-md-6">
                  <h5>RUT</h5>
                <input type="text" id="rut" class="form-control" placeholder="Ingrese RUT" >
              </div>

              <div class="col-12 col-md-6">
                  <h5>PASSWORD</h5>
                 <input type="password" id="password" class="form-control" placeholder="Ingrese Password">        
              </div>

          </div>
      </div>
    
<div class="container">
          <div class="row align-items-right my-5">
              <div class="col-4">
                <button id="inicio" type="submit" class="btn btn-primary">Inicio</button>
                <button id="ingresar" type="submit" class="btn btn-primary">Ingresar</button>
              </div>

         </div>
</div>

     </div>
</form>
</div>

<script>
   
  const form = document.querySelector("form")
        form.addEventListener("submit", async (e) => {
          e.preventDefault()
          let [ rut, password ] = document.querySelectorAll("input")
          rut = rut.value
          password = password.value
        
            const { data } = await axios.post('api/login', { rut, password })
            localStorage.setItem("user", JSON.stringify(data.user))
            localStorage.setItem("token",data.token);
             window.location.href = "/datos?token=" + data.token;
         
         });

    </script>



<script>
    const ingresar = document.getElementById("ingresar")
    ingresar.addEventListener("click", async (e) => {
        e.preventDefault()
        window.location = `/menuAdmin`
    });
</script>

<script>
    const inicio = document.getElementById("inicio")
    inicio.addEventListener("click", async (e) => {
        e.preventDefault()
        window.location = `/`
    });
</script>
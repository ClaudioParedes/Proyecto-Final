<div class="row container px-sm-5 py-5 justify-content-center mx-auto">
<div id="listadoTrabajadores">
    <h1>Listado de Trabajadores</h1>
    <hr />
    <div class="container pt-5 w-75">
      <table class="table table-dark table-hover table-striped border shadow">
        <thead>
          <tr>
            <th scope="col">#</th>
            <th scope="col">Rut</th>
            <th scope="col">Nombre</th>
            <th scope="col">Apellido</th>
          </tr>
        </thead>
    <tbody>

      {{#each trabajadores}}   
        <tr>
          <td>{{this.id_trabajador}}</td>
          <td>{{this.rut}}</td>
          <td>{{this.nombre}}</td>
          <td>{{this.apellido}}</td>
        </tr>
      {{/each}}
    </tbody>
 
      </table>
    </div>
  </div>
<div class="container">
          <div class="row align-items-right my-5">
              <div class="col-12 col-md-6">
                <button id="volver" type="submit" class="btn btn-primary">Volver</button>
               </div>
         </div>
</div>
</div>
</div>
</div>

<script>
    const volver = document.getElementById("volver")
    volver.addEventListener("click", async (e) => {
        e.preventDefault()
        window.location = `/menuAdmin`
    });
</script>

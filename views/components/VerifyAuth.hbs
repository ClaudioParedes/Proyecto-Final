{{#if requiresAuth}}
<script>
    
    // validamos que el token sea correcto
    async function verifyToken() {
        try{
        if (localStorage.getItem("token")) {
            await axios.post("/api/verify");
        } else {
            // si no existe el token, lo redireccionamos al login
            location.href = "/inicioSesion";
        }
    }catch(e){
        location.href = "/inicioSesion";
    }
    }
    verifyToken();
</script>
{{/if}}
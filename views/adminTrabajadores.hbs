            <button id="elim" class="btn btn-danger" onclick="eliminarTrabajador({{this.id_trabajador}})">Eliminar</button>
            <button id="modi" class="btn btn btn-success" onclick="modificarTrabajador({{this.id_trabajador}})">Confirmar Modificaci√≥n</button>

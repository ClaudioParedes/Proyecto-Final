<div class="row container px-sm-5 py-5 justify-content-center mx-auto">
 <div class="my-3"><h1>Datos Sector y Actividad</h1></div>
 <hr />
<div class="border shadow col-12 col-md-10 col-lg-9">
       
      <div class="container">
          <div class="row align-items-center my-5">
              <div class="col-12 col-md-6">
                  <h5>NIVEL</h5>
                      <select id="nivel" class="form-select" aria-label="Default select example">
                    
                     {{#each niveles}}
                        <option value="{{this.id_nivel}}">{{this.nombre}}</option>
                     {{/each}}
            </select>
                
              </div>

              <div class="col-12 col-md-6">
                  <h5>√ÅREA</h5>
            <select id="area" class="form-select" aria-label="Default select example">
                {{#each area}}
                        <option value="{{this.id_area}}">{{this.nombre}}</option>
                {{/each}}
            </select>   

              </div>
          </div>
      </div>
      <div class="container">
          <div class="row align-items-center my-5">
              <div class="col-12 col-md-6">
                  <h5>ACTIVIDAD</h5>
             <select id="actividad" class="form-select" aria-label="Default select example">
                {{#each actividad}}
                        <option value="{{this.id_actividad}}">{{this.nombre}}</option>
                     {{/each}}
            </select>
              </div>

              <div class="col-12 col-md-6">
                  <h5>CONTRATO</h5>
            <select id="gerencia" class="form-select" aria-label="Default select example">
               
                {{#each contrato}}
                        <option value="{{this.id_contrato}}">{{this.nro_contrato}}</option>
                     {{/each}}
            </select>
              </div>
          </div>
     </div>
<div class="container">
          <div class="row align-items-right my-5">
